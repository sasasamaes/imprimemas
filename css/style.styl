@import "reset.css"
@import 'normalize.css'

$negro = #282828
$blanco = #FAFAFA
$gris = #474747;
$naranja = #EFAF3F


html,body
  font-size 16px
  width 100%
  height 100%
  background $blanco
.contenedor
  margin 1.5rem 0 0 0
  width 100%
  height 100%
  display inline-block
  background $blanco

.header
  background $negro
  color $blanco
  height 64px
  position: fixed;
  top 0
  left 0
  width 100%
  z-index 10
  &-mobile
    display flex
    justify-content space-between
    padding 2%

  &-logo
    order 2
    width 100%
  &-btn-nav
    order 1
    font-size 2.5rem
    color $naranja
  &-menu-navbar
    background $gris

  &-menu-list
    list-style-type none
    height 0
    overflow hidden
    transition height .3s ease

    &--show
      height 273px
    &-item
      a
        text-decoration none
        color $blanco
        border 2pt solid $naranja
        width 100%
        padding 1.5rem
        display block



.contacto
  position fixed
  z-index 9
  top 85%
  right 5%
.content-feature
  display inline-block
  flex-direction column
  justify-content center
  align-items center
  align-content center
  box-sizing border-box
  width 100%
  height 100%
  text-align center
  color $blanco
  background #FFFFFF url('../assets/fondo1.jpg') no-repeat center center fixed;
.content-block-title
  font-size 2rem
  margin 0 1rem
.content-block
    order 1
    display flex
    flex-direction column
    justify-content flex-end
    width 100%
    height 50%
.content-flecha
    order 2
    display flex
    flex-direction column
    width 100%
    height 40%
    justify-content flex-end


.content-somos
