  justify-content center
  align-items center
  align-content center
  box-sizing border-box
  width 100%
  height 90%
  text-align center
  color $blanco
  background #FFFFFF url('../assets/fondo1.jpg') no-repeat center center fixed;
  h3
    font-size 1.1rem
    margin 0 1rem
.content-somos .content-block
  order 1
  display flex
  flex-direction column
  justify-content flex-end
  width 100%
  height 70%
.content-somos .content-flecha
  order 2
  display none
  flex-direction column
  width 100%
  height 30%
  justify-content flex-end



.content-servicios
  display inline-block
